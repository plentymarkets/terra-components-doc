{
	"extends": "./node_modules/@plentymarkets/terra-components/tslint-rules.json",
	"rulesDirectory": [
		"node_modules/@plentymarkets/terra-components",
		"node_modules/codelyzer",
		"node_modules/tslint-eslint-rules/dist/rules"
	],
	"rules": {
		"member-ordering": [
			true,
			{
				"order": [
					"public-static-field",
					"protected-static-field",
					"private-static-field",
					"public-instance-field",
					"protected-instance-field",
					"private-instance-field",
					"constructor"
				],
				"alphabetize": false
			}
		],
		"component-selector": [
			true,
			"element",
			["tdc"],
			"kebab-case"
		]
	}
}
